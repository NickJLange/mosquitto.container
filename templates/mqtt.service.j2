[Unit]
Description=Runs Mosquitto Server
Documentation=https://mosquitto.org/
After=network-online.target
Wants=network-online.target

[Service]
User={{mqtt_user}}
Group={{mqtt_group}}
ExecStart={{podman_path}} start -a {{ service_name }}
ExecReload={{podman_path}} stop -t 2 {{ service_name }}
KillSignal=SIGTERM
Restart=always

[Install]
WantedBy=multi-user.target
